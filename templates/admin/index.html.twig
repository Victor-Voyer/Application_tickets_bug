{% extends 'base.html.twig' %}

{% block title %}Administrator Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# <link rel="stylesheet" href="{{ asset('styles/admin.css') }}"> #}
{% endblock %}

{% block body %}
<div class="admin-dashboard">
    <div class="admin-header">
        <h1 class="admin-title">Administrator Dashboard</h1>
        <p class="admin-subtitle">Manage your users and tickets from this administration panel</p>
    </div>

    <div class="admin-actions">
        <div class="admin-card">
            <div class="admin-card-icon">
                <img class="admin-card-icon-img" src="{{ asset('images/icon-users.png') }}" alt="Users">
            </div>
            <h3>User Management</h3>
            <p>View, modify and manage all users of your application. View detailed information and roles.</p>
            <a href="{{ path('app_admin_users') }}" class="btn btn-primary">View Users</a>
        </div>

        <div class="admin-card">
            <div class="admin-card-icon">
                <img class="admin-card-icon-img" src="{{ asset('images/tickets-png.webp') }}" alt="Tickets">
            </div>
            <h3>Ticket Management</h3>
            <p>Monitor and manage all support tickets. Track their status, assign them and respond to requests.</p>
            <a href="{{ path('app_admin_tickets') }}" class="btn btn-primary">View Tickets</a>
        </div>
    </div>

</div>
{% endblock %}
