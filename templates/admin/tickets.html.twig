{% extends 'base.html.twig' %}

{% block title %}Ticket Management - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
{% endblock %}

{% block body %}
<div class="admin-container">
    <div class="admin-header">
        <h1 class="admin-title">Ticket Management</h1>
        <p class="admin-subtitle">Manage and monitor all support tickets</p>
        <a href="{{ path('app_admin_index') }}" class="btn-admin btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="admin-content">
        {% if tickets is empty %}
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <h3>No tickets found</h3>
                <p>There are currently no tickets in the system.</p>
            </div>
        {% else %}
            <div class="tickets-stats">
                <div class="stat-card">
                    <div class="stat-number">{{ tickets|length }}</div>
                    <div class="stat-label">Total Tickets</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">{{ tickets|filter(t => t.status.status.value == 'Open')|length }}</div>
                    <div class="stat-label">Open</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">{{ tickets|filter(t => t.status.status.value == 'In Progress')|length }}</div>
                    <div class="stat-label">In Progress</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">{{ tickets|filter(t => t.status.status.value == 'Resolved')|length }}</div>
                    <div class="stat-label">Resolved</div>
                </div>
            </div>

            <div class="tickets-table-container">
                <table class="tickets-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>User</th>
                            <th>Status</th>
                            <th>Type</th>
                            <th>Stack</th>
                            <th>Created</th>
                            <th>Comments</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ticket in tickets %}
                            <tr class="ticket-row">
                                <td class="ticket-id">#{{ ticket.id }}</td>
                                <td class="ticket-title">
                                    <div class="title-content">
                                        <strong>{{ ticket.title }}</strong>
                                        
                                    </div>
                                </td>
                                <td class="ticket-user">
                                    <div class="user-info">
                                        <div class="user-name">{{ ticket.user.firstName }} {{ ticket.user.lastName }}</div>
                                        <div class="user-email">{{ ticket.user.email }}</div>
                                        <div class="user-nickname">@{{ ticket.user.nickname }}</div>
                                    </div>
                                </td>
                                <td class="ticket-status">
                                    <span class="status-badge status-{{ ticket.status.status.value|lower|replace({' ': '-'}) }}">
                                        {{ ticket.status.status.value }}
                                    </span>
                                </td>
                                <td class="ticket-type">
                                    <span class="type-badge type-{{ ticket.type.value|lower }}">
                                        {{ ticket.type.value }}
                                    </span>
                                </td>
                                <td class="ticket-stack">
                                    <span class="stack-badge">{{ ticket.stack.value }}</span>
                                </td>
                                <td class="ticket-created">
                                    {{ ticket.createdAt|date('d/m/Y H:i') }}
                                </td>
                                <td class="ticket-comments">
                                    <span class="comments-count">
                                        <i class="fas fa-comments"></i>
                                        {{ ticket.comments|length }}
                                    </span>
                                </td>
                                <td class="ticket-actions">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_tickets_show', {'id': ticket.id}) }}" 
                                           class="btn-admin btn-info" 
                                           title="View Ticket">
                                            <i class="fas fa-eye">View</i>
                                        </a>                                        
                                        {# <a href="{{ path('app_comments_index', {'ticket_id': ticket.id}) }}" 
                                           class="btn-admin btn-danger" 
                                           title="Delete">
                                            <i class="fas fa-comments">Delete</i>
                                        </a> #}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}