{# templates/form_errors/form_theme.html.twig #}
{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="form-error-container">
            {% for error in errors %}
                <div class="form-error-item">
                    <svg class="form-error-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="2"/>
                        <path d="M10 6V11" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        <circle cx="10" cy="14" r="0.5" fill="currentColor" stroke="currentColor"/>
                    </svg>
                    <span class="form-error-message">{{ error.message }}</span>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
