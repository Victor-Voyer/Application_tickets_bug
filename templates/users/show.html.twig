{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

    <section class="form-section">
        <h2>Profile</h2>
        <div class="avatar-container">
            <img class="avatar" src="{{ asset('uploads/users/' ~ user.avatar) }}" alt="Avatar">
        </div>
        <p>Name: {{ user.firstname }} {{ user.lastname }}</p>
        <p>Email: {{ user.email }}</p>
        
    

    <div class="form-buttons">
        <a href="{{ path('app_tickets_index') }}"><button class="btn btn-secondary">Back to Home</button></a>
        <a href="{{ path('app_users_edit', {'id': user.id}) }}"><button class="btn btn-info">Edit</button></a>
        {{ include('users/_delete_form.html.twig') }}
    </div>
    </section>
{% endblock %}
